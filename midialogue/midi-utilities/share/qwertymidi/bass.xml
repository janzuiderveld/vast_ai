<?xml version="1.0"?>

<!--
Fourths layout (isomorphic 1E/5NW) for bass.
-->

<qwertymidi>

<map key="escape" action="exit" />
<map key="f1" action="stay-down-octave" />
<map key="f2" action="stay-up-octave" />
<map key="f3" action="stay-down-note" />
<map key="f4" action="stay-up-note" />
<map key="space" action="shift-up-octave" />

<map key="backtick" action="F#3" /><!-- above the nut -->
<map key="1" action="G3" />
<map key="2" action="G#3" />
<map key="3" action="A3" />
<map key="4" action="A#3" />
<map key="5" action="B3" />
<map key="6" action="C4" />
<map key="7" action="C#4" />
<map key="8" action="D4" />
<map key="9" action="D#4" />
<map key="0" action="E4" />
<map key="minus" action="F4" />
<map key="equals" action="F#4" />
<map key="backspace" action="G4" />

<map key="tab" action="C#3" /><!-- above the nut -->
<map key="Q" action="D3" />
<map key="W" action="D#3" />
<map key="E" action="E3" />
<map key="R" action="F3" />
<map key="T" action="F#3" />
<map key="Y" action="G3" />
<map key="U" action="G#3" />
<map key="I" action="A3" />
<map key="O" action="A#3" />
<map key="P" action="B3" />
<map key="open-bracket" action="C4" />
<map key="close-bracket" action="C#4" />
<map key="backslash" action="D4" />

<map key="A" action="A2" />
<map key="S" action="A#2" />
<map key="D" action="B2" />
<map key="F" action="C3" />
<map key="G" action="C#3" />
<map key="H" action="D3" />
<map key="J" action="D#3" />
<map key="K" action="E3" />
<map key="L" action="F3" />
<map key="semicolon" action="F#3" />
<map key="single-quote" action="G3" />
<map key="enter" action="G#3" />

<map key="Z" action="E2" />
<map key="X" action="F2" />
<map key="C" action="F#2" />
<map key="V" action="G2" />
<map key="B" action="G#2" />
<map key="N" action="A2" />
<map key="M" action="A#2" />
<map key="comma" action="B2" />
<map key="period" action="C3" />
<map key="slash" action="C#3" />

</qwertymidi>
