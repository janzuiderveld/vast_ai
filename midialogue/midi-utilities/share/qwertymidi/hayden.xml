<?xml version="1.0"?>

<!--
Brian Hayden's isomorphic 2E/7NE layout for the concertina (identical to Kaspar
Wicki's historical layout for the bandoneon).

This version splits the keyboard between two hands, providing more range but
a few missing notes and fewer isomorphic intervals.  This is similar to an
entry-level Hayden duet concertina like the Concertina Connection Elise.
-->

<qwertymidi>

<map key="escape" action="exit" />
<map key="f1" action="stay-down-octave" />
<map key="f2" action="stay-up-octave" />
<map key="f3" action="stay-down-note" />
<map key="f4" action="stay-up-note" />
<map key="space" action="shift-up-octave" />

<!-- Left hand -->

<map key="backtick" action="Db4" />
<map key="1" action="Eb4" />
<map key="2" action="F4" />
<map key="3" action="G4" />
<map key="4" action="A4" />
<map key="5" action="B4" />

<map key="tab" action="Ab3" />
<map key="Q" action="Bb3" />
<map key="W" action="C4" />
<map key="E" action="D4" />
<map key="R" action="E4" />
<map key="T" action="F#4" />

<map key="A" action="F3" />
<map key="S" action="G3" />
<map key="D" action="A3" />
<map key="F" action="B3" />
<map key="G" action="C#4" />

<map key="Z" action="C3" />
<map key="X" action="D3" />
<map key="C" action="E3" />
<map key="V" action="F#3" />
<map key="B" action="G#3" />

<!-- Right hand -->

<map key="6" action="Eb5" />
<map key="7" action="F5" />
<map key="8" action="G5" />
<map key="9" action="A5" />
<map key="0" action="B5" />
<map key="minus" action="C#6" />
<map key="equals" action="D#6" />
<map key="backspace" action="F6" />

<map key="Y" action="Bb4" />
<map key="U" action="C5" />
<map key="I" action="D5" />
<map key="O" action="E5" />
<map key="P" action="F#5" />
<map key="open-bracket" action="G#5" />
<map key="close-bracket" action="A#5" />
<map key="backslash" action="C6" />

<map key="H" action="F4" />
<map key="J" action="G4" />
<map key="K" action="A4" />
<map key="L" action="B4" />
<map key="semicolon" action="C#5" />
<map key="single-quote" action="D#5" />
<map key="enter" action="F5" />

<map key="N" action="C4" />
<map key="M" action="D4" />
<map key="comma" action="E4" />
<map key="period" action="F#4" />
<map key="slash" action="G#4" />

</qwertymidi>
